{
    "name": "jcchikikomori/php7-starter",
    "type": "project",
    "description": "Pure PHP 7 Starter Pack for prototyping/testing",
    "keywords": ["OOP", "PHP", "application"],
    "license": "MIT",
    "authors": [
        {
            "name": "John Cyrill Corsanes",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "phpmailer/phpmailer": ">=6.1.6",
        "gregwar/captcha": "1.*",
        "league/oauth2-client": "^2.2",
        "catfan/medoo": ">=1.2",
        "jenssegers/agent": "^2.5",
        "robmorgan/phinx": "^0.12.4"
    },
    "scripts": {
        "post-autoload-dump": [
            "php -r \"file_exists('configs/system.php') || copy('configs/system.php.example', 'configs/system.php'); file_exists('configs/database.php') || copy('configs/database.php.example', 'configs/database.php');\""
        ]
    },
    "require-dev": {
        "odan/phinx-migrations-generator": "^5.1"
    }
}
